{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::colop-app-drawings/drawings/customizados/*",
                "arn:aws:s3:::colop-app-drawings/drawings/*/*",
                "arn:aws:s3:::colop-app-drawings/drawings/*/thumb_*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::colop-app-drawings/drawings/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::colop-app-drawings"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::colop-app-drawings/drawings/*"
        }
    ]
}

